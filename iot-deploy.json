{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tags" : {
            "type" : "object",
            "metadata" : {
                "description" : "Used to tag all resources created by this template"
            }
        },
        "iotHubName" : {
            "type" : "string",
            "metadata" : {
                "description" : "Name of IoT Hub"
            }
        },
        "edgeDeviceName" : {
            "type": "string",
            "metadata": {
                "description" : "Name of edge device"
            }
        },
        "identityName" : {
            "type" : "string",
            "metadata" : {
                "description" : "Name of identity"
            }
        },
        "utcValue": {
            "type": "string",
            "defaultValue": "[utcNow()]"
        }        
    },
    "functions": [],
    "variables": {
        "location" : "[resourceGroup().location]"
    },
    "resources": [
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion" : "2020-06-15",
            "tags": "[parameters('tags')]",
            "name" : "[parameters('iotHubName')]",
            "location" : "[variables('location')]",
            "sku" : {
                "name" : "S1",
                "tier" : "Standard",
                "capacity" : 1
            },
            "properties": {
                "ipFilterRules": [],
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 4
                    }
                },
                "routing": {
                    "endpoints": {},
                    "routes": [],
                    "fallbackRoute": {
                        "name": "$fallback",
                        "source": "DeviceMessages",
                        "condition": "true",
                        "endpointNames": [
                            "events"
                        ],
                        "isEnabled": true
                    }
                }
            }            
        },
        {
            "type" : "Microsoft.Resources/deploymentScripts",
            "apiVersion" : "2020-10-01",
            "name" : "edgeDeviceRegistration",
            "location" : "[variables('location')]",
            "dependsOn" : [
                "[parameters('iotHubName')]"
            ],
            "kind": "AzureCLI",
            "identity" : {
                "type" : "UserAssigned",
                "userAssignedIdentities" : {
                    "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('identityName'))]": {
                    }
                }
            },
            "properties" : {
                "forceUpdateTag" : "[parameters('utcValue')]",
                "azCliVersion" : "2.16.0",
                "scriptContent" : "
                    echo \"Registering edge device $1 with IoT Hub $2\"
                ",
                "arguments" : "[format('{0} {1}', parameters('iotHubName'), parameters('edgeDeviceName'))]",
                "cleanupPreference" : "OnSuccess",
                "retentionInterval" : "P1D",
                "timeout" : "PT30M"
            }
        }        
    ],
    "outputs": {}
}