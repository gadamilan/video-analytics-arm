{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tags" : {
            "type" : "object",
            "metadata" : {
                "description" : "Used to tag all resources created by this template"
            }
        },
        "storageAccountName" : {
            "type" : "string",
            "metadata" : {
                "description" : "Name of Storage account"
            }
        },
        "amsAccountName" : {
            "type" : "string",
            "metadata" : {
                "description" : "Name of Media Services account"
            }
        }
    },
    "functions": [],
    "variables": {
        "location" : "[resourceGroup().location]"
    },
    "resources": [
        {
            "type": "Microsoft.Media/mediaServices",
            "apiVersion": "2018-07-01",
            "name": "[parameters('amsAccountName')]",
            "location": "[variables('location')]",
            "properties": {
                "storageAccounts": [
                    {
                        "id": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
                        "type": "Primary"
                    }
                ]
            },
            "tags": "[parameters('tags')]"
        }        
    ],
    "outputs": {}
}