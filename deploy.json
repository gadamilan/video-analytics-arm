{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "namePrefix" : {
            "type" : "string",
            "defaultValue" : "va",
            "minLength" : 2,
            "maxLength" : 10,
            "metadata" : {
                "description" : "Used to qualify the names of all resources created by this template"
            }
        },
        "resourceTags" : {
            "type" : "object",
            "defaultValue" : {
                "sample" : "video-analytics"      
            },
            "metadata" : {
                "description" : "Used to tag all resources created by this template"
            }

        }
    },
    "functions": [],
    "variables": {
        "storageAccountName": "[concat(parameters('namePrefix'),uniqueString(resourceGroup().id))]",
        "amsAccountName": "[concat(parameters('namePrefix'),uniqueString(resourceGroup().id))]"        
    },
    "resources": [
        {
            "name": "vaDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gadamilan/video-analytics-arm/main/va-deploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "tags" : { 
                        "value" : "[parameters('resourceTags')]"
                    },
                    "storageAccountName" : {
                        "value" : "[variables('storageAccountName')]"
                    },
                    "amsAccountName" : {
                        "value" : "[variables('amsAccountName')]"
                    }
                }
            }
        }      
    ],
    "outputs": {
        "amsAccountName" : {
            "type" : "string",
            "value" : "[variables('amsAccountName')]"
        }
    }
}