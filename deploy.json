{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "namePrefix" : {
            "type" : "string",
            "defaultValue" : "va",
            "minLength" : 2,
            "maxLength" : 10,
            "metadata" : {
                "description" : "Used to qualify the names of all resources created by this template"                
            }            
        },
        "resourceTags" : {
            "type" : "object",
            "defaultValue" : {
                "Author" : "VA Sample"      
            },
            "metadata" : {
                "description" : "Used to tag all resources created by this template"
            }
        },
        "useExistingAMSAccount" : {
            "type" : "string",
            "allowedValues" : [
                "Yes",
                "No"
            ],
            "defaultValue" : "No",
            "metadata" : {
                "description" : "Select 'Yes' if you would like to use an existing account. If you select 'No', a new account will be created in the above resource group"
            }
        },
        "existingAMSResourceGroup" : {
            "type" : "string",
            "metadata" : {
                "description" : "Provide name of resource group of existing Media Services Account you want to use"
            },
            "defaultValue" : ""
        },
        "existingAMSAccountName" : {
            "type" : "string",
            "metadata" : {
                "description" : "Provide name of existing Media Services Account you want to use"
            },
            "defaultValue" : ""
        }
    },
    "functions": [],
    "variables": {
        "storageAccountName": "[concat(parameters('namePrefix'),uniqueString(resourceGroup().id))]",
        "amsResourceGroup" : "[if(equals(parameters('useExistingAMSAccount'), 'Yes'), parameters('existingAMSResourceGroup'), resourceGroup().name)]",
        "amsAccountName": "[if(equals(parameters('useExistingAMSAccount'), 'Yes'), parameters('existingAMSAccountName'), concat(parameters('namePrefix'), uniqueString(resourceGroup().id)))]"        
    },
    "resources": [
        {
            "condition" : "[equals(parameters('useExistingAMSAccount'), 'No')]",
            "name": "vaDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gadamilan/video-analytics-arm/main/va-deploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "tags" : { 
                        "value" : "[parameters('resourceTags')]"
                    },
                    "storageAccountName" : {
                        "value" : "[variables('storageAccountName')]"
                    },
                    "amsAccountName" : {
                        "value" : "[variables('amsAccountName')]"
                    }
                }
            }
        }      
    ],
    "outputs": {
        "amsResourceGroup" : {
            "type" : "string",
            "value" : "[variables('amsResourceGroup')]"
        },
        "amsAccountName" : {
            "type" : "string",
            "value" : "[variables('amsAccountName')]"
        }
    }
}