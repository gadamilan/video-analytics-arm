{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appResourceGroup" : {
            "type": "string",
            "minLength" : 3,
            "maxLength" : 13,
            "metadata" : {
                "description" : "Provide name of resource group to create for resources required for app"
            }
        },
        "namePrefix" : {
            "type" : "string",
            "defaultValue" : "va",
            "minLength" : 2,
            "maxLength" : 10,
            "metadata" : {
                "description" : "Used to qualify the names of all resources created by this template"                
            }            
        },
        "resourceTags" : {
            "type" : "object",
            "defaultValue" : {
                "Author" : "VA Sample"      
            },
            "metadata" : {
                "description" : "Used to tag all resources created by this template"
            }
        },
        "useExistingAMSAccount" : {
            "type" : "string",
            "allowedValues" : [
                "Yes",
                "No"
            ],
            "defaultValue" : "No",
            "metadata" : {
                "description" : "Select 'Yes' if you would like to use an existing account. If you select 'No', a new account will be created in the above resource group"
            }
        },
        "existingAMSResourceGroup" : {
            "type" : "string",
            "metadata" : {
                "description" : "Provide name of resource group of existing Media Services Account you want to use"
            },
            "defaultValue" : ""
        },
        "existingAMSAccountName" : {
            "type" : "string",
            "metadata" : {
                "description" : "Provide name of existing Media Services Account you want to use"
            },
            "defaultValue" : ""
        },
        "useExistingIoTHub" : {
            "type" : "string",
            "allowedValues" : [
                "Yes",
                "No"
            ],
            "defaultValue" : "No",
            "metadata" : {
                "description" : "Select 'Yes' if you would like to use an existing IoT Hub. If you select 'No', a new IoT Hub will be created in the above resource group"
            }
        },
        "existingIoTHubResourceGroup" : {
            "type" : "string",
            "metadata" : {
                "description" : "Provide name of resource group of existing IoT Hub you want to use"
            },
            "defaultValue" : ""
        },
        "existingIoTHubName" : {
            "type" : "string",
            "metadata" : {
                "description" : "Provide name of existing IoT Hub you want to use"
            },
            "defaultValue" : ""
        }        
    },
    "functions": [],
    "variables": {
        "storageAccountName": "[concat(parameters('namePrefix'),uniqueString(subscription().id, parameters('appResourceGroup')))]",
        "amsResourceGroup" : "[if(equals(parameters('useExistingAMSAccount'), 'Yes'), parameters('existingAMSResourceGroup'), parameters('appResourceGroup'))]",
        "amsAccountName": "[if(equals(parameters('useExistingAMSAccount'), 'Yes'), parameters('existingAMSAccountName'), concat(parameters('namePrefix'), uniqueString(subscription().id, parameters('appResourceGroup'))))]",
        "iotHubResourceGroup" : "[if(equals(parameters('useExistingIoTHub'), 'Yes'), parameters('existingIoTHubResourceGroup'), parameters('appResourceGroup'))]",
        "iotHubName": "[if(equals(parameters('useExistingIoTHub'), 'Yes'), parameters('existingIoTHubName'), concat(parameters('namePrefix'), uniqueString(subscription().id, parameters('appResourceGroup'))))]"                  
    },
    "resources": [
        {
            "condition" : "[equals(parameters('useExistingAMSAccount'), 'No')]",
            "name": "vaDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gadamilan/video-analytics-arm/main/va-deploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "tags" : { 
                        "value" : "[parameters('resourceTags')]"
                    },
                    "storageAccountName" : {
                        "value" : "[variables('storageAccountName')]"
                    },
                    "amsAccountName" : {
                        "value" : "[variables('amsAccountName')]"
                    }
                }
            }
        },
        {
            "condition" : "[equals(parameters('useExistingIoTHub'), 'No')]",
            "name" : "iotDeployment",
            "type" : "Microsoft.Resources/deployments",
            "apiVersion" : "2019-10-01",
            "properties": {
                "mode" : "Incremental",
                "templateLink" : {
                    "uri" : "https://raw.githubusercontent.com/gadamilan/video-analytics-arm/main/iot-deploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters" : {
                    "tags" : { 
                        "value" : "[parameters('resourceTags')]"
                    },
                    "iotHubName" : {
                        "value" : "[variables('iotHubName')]"
                    }
                }
            }
        }      
    ],
    "outputs": {
        "amsResourceGroup" : {
            "type" : "string",
            "value" : "[variables('amsResourceGroup')]"
        },
        "amsAccountName" : {
            "type" : "string",
            "value" : "[variables('amsAccountName')]"
        },
        "iotHubResourceGroup" : {
            "type" : "string",
            "value" : "[variables('iotHubResourceGroup')]"
        },
        "iotHubName" : {
            "type" : "string",
            "value" : "[variables('iotHubName')]"
        }        
    }
}